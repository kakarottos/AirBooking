<% include partials/header.ejs %>
<div class="table-wrapper">
    <% if (tourists.length > 0) {%>
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Gender</th>
                    <th scope="col">Country</th>
                    <th scope="col">Note</th>
                    <th scope="col">Birth date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% tourists.forEach((tourist, index) => { %>
                    <tr>
                        <th scope="row"><%= tourist.id %></th>
                        <td><%= tourist.first_name %></td>
                        <td><%= tourist.last_name %></td>
                        <td><%= tourist.gender %></td>
                        <td><%= tourist.country %></td>
                        <td><%= tourist.note %></td>
                        <td><%= tourist.birth_date %></td>
                        <td>
                            <a href="/editTourist/<%= tourist.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                            <a href="/deleteTourist/<%= tourist.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No tourists found. Go <a href="/addTourist" >here</a> to add tourists.</p>
    <% } %>
</div>
<div class="table-wrapper">
    <% if (flights.length > 0) {%> 
        <table class="table table-hovered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Departure date</th>
                    <th scope="col">Arrival date</th>
                    <th scope="col">Departure from</th>
                    <th scope="col">Arrival to</th>
                    <th scope="col">Seats</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% flights.forEach((flights, index) => { %>
                    <tr>
                        <th scope="row"><%= flights.id %></th>
                        <td><%= flights.datestart %></td>
                        <td><%= flights.dateend %></td>
                        <td><%= flights.flight_from %></td>
                        <td><%= flights.flight_to %></td>
                        <td><%= flights.seats %></td>
                        <td><%= flights.cost %></td>
                        <td>
                            <a href="/editFlight/<%= flights.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                            <a href="/deleteFlight/<%= flights.id %>" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } else { %>
        <p class="text-center">No flights found. Go <a href="/addFlight" >here</a> to add flights.</p>
    <% } %>
</div>
</div>
</body>
</html>
