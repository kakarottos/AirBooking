<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-flight-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input placeholder="Departure date" class="form-control" type="text" onfocus="(this.type='date')" onblur="(this.type='text')" name="datestart" id="datestart" required>
                    <!-- <input type="date" class="form-control" name="datestart" id="datestart" placeholder="Departure date" required> -->
                </div>
                <div class="form-group col-md-6">
                    <input type="date" class="form-control" name="dateend" id="dateend" placeholder="Arrival date" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="flight_from" id="flight_from" placeholder="Departure from" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="flight_to" id="flight_to" placeholder="Arrival to" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="seats" id="seats" placeholder="Number of seats" required>
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="cost" id="cost" placeholder="Ticket price" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add flight</button>
        </form>
    </div>
</div>
</body>
</html>